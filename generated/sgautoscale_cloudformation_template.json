                        "ToPort": "4369"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "5984",
                        "IpProtocol": "tcp",
                        "ToPort": "5984"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "8092",
                        "IpProtocol": "tcp",
                        "ToPort": "8092"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "11209",
                        "IpProtocol": "tcp",
                        "ToPort": "11209"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "11210",
                        "IpProtocol": "tcp",
                        "ToPort": "11210"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "11211",
                        "IpProtocol": "tcp",
                        "ToPort": "11211"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "21100",
                        "IpProtocol": "tcp",
                        "ToPort": "21299"
                    }
                ]
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "EC2InstanceProfile": {
            "Properties": {
                "Roles": [
                    {
                        "Ref": "MobileTestKit"
                    }
                ]
            },
            "Type": "AWS::IAM::InstanceProfile"
        },
        "MobileTestKit": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": "sts:AssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "ec2.amazonaws.com"
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/CloudWatchFullAccess",
                    "arn:aws:iam::aws:policy/AmazonEC2ReadOnlyAccess"
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "SGAccelAutoScalingGroup": {
            "Properties": {
                "AvailabilityZones": {
                    "Fn::GetAZs": ""
                },
                "LaunchConfigurationName": {
                    "Ref": "SGAccelLaunchConfiguration"
                },
                "MaxSize": 100,
                "MinSize": 0,
                "Tags": [
                    {
                        "Key": "Type",
                        "PropagateAtLaunch": true,
                        "Value": "sgaccel"
                    },
                    {
                        "Key": "Name",
                        "PropagateAtLaunch": true,
                        "Value": "sgaccel_autoscale_instance"
                    }
                ]
            },
            "Type": "AWS::AutoScaling::AutoScalingGroup"
        },
        "SGAccelLaunchConfiguration": {
            "Properties": {
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "DeleteOnTermination": "true",
                            "VolumeSize": 25,
                            "VolumeType": "gp2"
                        }
                    }
                ],
                "IamInstanceProfile": {
                    "Ref": "EC2InstanceProfile"
                },
                "ImageId": "ami-00914316",
                "InstanceType": "c3.2xlarge",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SecurityGroups": [
                    {
                        "Ref": "CouchbaseSecurityGroup"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "wget https://raw.githubusercontent.com/tleyden/build/master/scripts/jenkins/mobile/ami/sg_launch.py\n",
                                "wget https://raw.githubusercontent.com/couchbaselabs/sg-autoscale/master/src/sg_autoscale_launch.py\n",
                                "wget https://raw.githubusercontent.com/couchbaselabs/sg-autoscale/master/src/cbbootstrap.py\n",
                                "cat *.py\n",
                                "python sg_autoscale_launch.py --stack-name ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "\n",
                                "ethtool -K eth0 sg off\n"
                            ]
                        ]
                    }
                }
            },
            "Type": "AWS::AutoScaling::LaunchConfiguration"
        },
        "SGAutoScaleLoadBalancer": {
            "Properties": {
                "AvailabilityZones": {
                    "Fn::GetAZs": ""
                },
                "ConnectionDrainingPolicy": {
                    "Enabled": true,
                    "Timeout": 120
                },
                "ConnectionSettings": {
                    "IdleTimeout": 3600
                },
                "CrossZone": "true",
                "HealthCheck": {
                    "HealthyThreshold": "2",
                    "Interval": "5",
                    "Target": "HTTP:4984/",
                    "Timeout": "3",
                    "UnhealthyThreshold": "2"
                },
                "Listeners": [
                    {
                        "InstancePort": "4984",
                        "InstanceProtocol": "HTTP",
                        "LoadBalancerPort": "4984",
                        "Protocol": "HTTP"
                    },
                    {
                        "InstancePort": "4985",
                        "InstanceProtocol": "HTTP",
                        "LoadBalancerPort": "4985",
                        "Protocol": "HTTP"
                    }
                ],
                "LoadBalancerName": {
                    "Fn::Join": [
                        "",
                        [
                            "SGAS-",
                            {
                                "Ref": "AWS::StackName"
                            }
                        ]
                    ]
                },
                "Scheme": "internet-facing",
                "SecurityGroups": [
                    {
                        "Fn::GetAtt": [
                            "CouchbaseSecurityGroup",
                            "GroupId"
                        ]
                    }
                ]
            },
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer"
        },
        "SGAutoScalingGroup": {
            "Properties": {
                "AvailabilityZones": {
                    "Fn::GetAZs": ""
                },
                "LaunchConfigurationName": {
                    "Ref": "SGLaunchConfiguration"
                },
                "LoadBalancerNames": [
