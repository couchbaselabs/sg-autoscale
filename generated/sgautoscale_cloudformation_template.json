                                {
                                    "Ref": "AWS::StackName"
                                },
                                "\n",
                                "export public_dns_name=$(curl http://169.254.169.254/latest/meta-data/public-hostname)\n",
                                "python cbbootstrap.py ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                " ${public_dns_name}\n",
